                                <h2 style="margin: 5px;"><%=usArr[5].dt_txt%></h2>
                                <div class="icon2"></div>
                                <h3><%=usArr[5].main.temp%>°C</h3>
                            </div>
                        </div>
                    </div>
                    <div class="logoBox2"></div>
                </div>
            </div>
        </div>
</body>
<script src="main.js"></script>
